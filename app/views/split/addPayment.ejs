<!DOCTYPE html>
<html>
<head>
    <title>Add Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header Section -->
    <div class="bg-danger text-white py-3 text-center">
        <h1 class="mb-0">Split-Billy</h1>
    </div>

    <!-- Add Payment Form -->
    <div class="container mt-4">
        <form action="/add-payment" method="POST">
            <!-- Payer Dropdown -->
            <div class="mb-3">
                <label for="payer" class="form-label">Payer</label>
                <select id="payer" name="payer" class="form-select" required>
                    <% for (let names of members) { %>
                        <option value="<%= names %>"><%= names %></option>
                    <% } %>
                       
                </select>
            </div>

            <!-- Payment Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Payment of...</label>
                <input type="text" id="description" name="description" class="form-control" placeholder="e.g., flight ticket" required>
            </div>

            <!-- Price Input -->
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">Rp</span>
                    <input type="number" id="price" name="price" class="form-control" placeholder="e.g., 980" required>
                </div>
            </div>

            <!-- Payment For Checkbox -->
            <div class="mb-3">
                <label class="form-label">Payment for...</label>
                <% for (let name of members) { %>
                    <div class="form-check">
                        <input 
                            class="form-check-input" 
                            type="checkbox" 
                            id="<%= name %>Checkbox" 
                            name="paymentFor" 
                            value="<%= name %>" 
                            checked>
                        <label class="form-check-label" for="<%= name %>Checkbox"><%= name %></label>
                    </div>
                <% } %>
            </div>
            

            <!-- Save and Back Buttons -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger fw-bold">Save</button>
                <a href="javascript:history.back()" class="btn btn-light border text-danger">Back</a>


            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
